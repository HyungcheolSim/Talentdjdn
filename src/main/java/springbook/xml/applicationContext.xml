<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<!-- spring book exercise -->
	<bean id="connectionMaker" class="util.TalentConnectionMaker"/>
	<!-- <bean id="productionDBconnectionMaker" class="util.ProductionDBConnectionMaker"/> -->
	<!-- productionDB 사용시에는 아래 userDao의 ref를 productionDB로 설정 -->
	<bean id="userDao" class="springbook.user.dao.UserDao">
		<property name="connectionMaker" ref="connectionMaker"/>
	</bean>

</beans>
